{
  "name": "generate-summary",
  "version": "1.0.0",
  "description": "Generate concise 2-3 sentence feedback summary from grading report",
  "author": "RamiAutoGrader",
  "inputs": {
    "grading_report_path": {
      "type": "string",
      "required": true,
      "description": "Absolute path to student's grading_results.json file"
    }
  },
  "outputs": {
    "summary": {
      "type": "string",
      "description": "2-3 sentence feedback summary (30-50 words)"
    }
  },
  "dependencies": [
    "anthropic>=0.40.0",
    "python-dotenv>=1.0.0"
  ],
  "environment": {
    "ANTHROPIC_API_KEY": {
      "required": true,
      "description": "Claude API key from Anthropic"
    }
  },
  "entrypoint": "scripts/summarize_report.py",
  "timeout": 20,
  "retry_policy": {
    "max_retries": 3,
    "backoff_strategy": "exponential"
  }
}
